<Window x:Class="BookingSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BookingSystem.UI.ViewModels"
        mc:Ignorable="d"
        Title="BookingSystem" Height="600" Width="800">

    <Grid>
        <TabControl HorizontalAlignment="Left" Height="569" VerticalAlignment="Top" Width="792">
            <TabItem Header="Drivers">
                <Grid x:Name="ManageDrivers" Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.DataContext>
                        <viewModels:DriverViewModel/>
                    </Grid.DataContext>
                    <ListBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Drivers}" SelectedItem="{Binding SelectedDriver}" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock FontSize="18" Text="{Binding Path=FirstName}"></TextBlock>
                                    <TextBlock FontSize="18" Text="{Binding Path=LastName}"></TextBlock>
                                    <TextBlock Text="{Binding Path=Birthdate, StringFormat=dd.MM.yyyy}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Grid.Column="1" Grid.Row="0" DataContext="{Binding SelectedDriver}">
                        <Label Content="First Name: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Last Name: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Birthdate: " VerticalAlignment="Center"/>
                        <DatePicker Text="{Binding Birthdate, UpdateSourceTrigger=PropertyChanged, StringFormat=dd.MM.yyyy}" VerticalAlignment="Center" FirstDayOfWeek="Monday"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Button Content="+" Width="90" Command="{Binding AddDriverCommand}"/>
                        <Button Content="-" Width="90" Command="{Binding RemoveDriverCommand}" CommandParameter="{Binding SelectedDriver}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Buses">
                <Grid x:Name="ManageBuses" Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.DataContext>
                        <viewModels:BusViewModel/>
                    </Grid.DataContext>
                    <ListBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Buses}" SelectedItem="{Binding SelectedBus}" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock FontSize="18" Text="{Binding Path=Model}"></TextBlock>
                                    <TextBlock Text="{Binding Path=AutomobileNumber}"></TextBlock>
                                    <TextBlock Text="{Binding Path=Vin}"></TextBlock>
                                    <TextBlock Text="{Binding Path=PassengersCount}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Grid.Column="1" Grid.Row="0" DataContext="{Binding SelectedBus}">
                        <Label Content="Model: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Automobile number: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AutomobileNumber, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="VIN: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Vin, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Passengers count: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding PassengersCount, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Button Content="+" Width="90" Command="{Binding AddBusCommand}"/>
                        <Button Content="-" Width="90" Command="{Binding RemoveBusCommand}" CommandParameter="{Binding SelectedBus}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Route Points">
                <Grid x:Name="ManageRoutePoints" Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.DataContext>
                        <viewModels:RoutePointsViewModel/>
                    </Grid.DataContext>
                    <ListBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding RoutePoints}" SelectedItem="{Binding SelectedRoutePoint}" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock FontSize="18" Text="{Binding Path=City}"></TextBlock>
                                    <TextBlock Text="{Binding Path=State}"></TextBlock>
                                    <TextBlock Text="{Binding Path=Region}"></TextBlock>
                                    <TextBlock Text="{Binding Path=Country}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Grid.Column="1" Grid.Row="0" DataContext="{Binding SelectedRoutePoint}">
                        <Label Content="City: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="State: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Region: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Region, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Country: " VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Button Content="+" Width="90" Command="{Binding AddRoutePointCommand}"/>
                        <Button Content="-" Width="90" Command="{Binding RemoveRoutePointCommand}" CommandParameter="{Binding SelectedRoutePoint}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
